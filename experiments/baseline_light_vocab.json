{
  "dataset_reader": {
    "type": "nlpcc3",
    "lazy": true,
    "source_tokenizer": {
      "type": "word",
      "word_splitter": {
         "type": "jieba",
      },
    },
    "source_token_indexers": {
      "tokens": {
        "type": "single_id"
      }
    },
    "make_vocab": true
  },
  "train_data_path": "tmp/train.jsonl",
  "validation_data_path": "tmp/val.jsonl",
  "test_data_path": "tmp/test_vocab.jsonl",
  "evaluate_on_test": false,
  "vocabulary": {
     "min_count": {"tokens": 5},
     "max_vocab_size": 100000
  },
  "model": {
    "type": "pg",
    "source_embedder": {
      "tokens": {
        "type": "embedding",
        "embedding_dim": 300,
        "projection_dim": 128,
        "pretrained_file": "tmp/wiki.zh.vec.gz",
        "trainable": false
      }
    },
    "encoder": {
      "type": "gru",
      "bidirectional": true,
      "input_size": 128,
      "hidden_size": 256,
      "num_layers": 1,
      "dropout": 0.2
    },
    "max_decoding_steps": 60,
    "attention_function": {
      "type": "linear-v",
      "combination": "x,y",
      "tensor_1_dim": 128,
      "tensor_2_dim": 256,
      "attend_dim": 256,
      "activation": "tanh"
    },
    "scheduled_sampling_ratio": 0.25
  },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [["source_tokens", "num_tokens"],["target_tokens","num_tokens"]],
    "biggest_batch_first": true,
    "batch_size": 16,
    "max_instances_in_memory": 12800
  },
  "trainer": {
    "num_epochs": 5,
    "patience": 2,
    "cuda_device": 0,
    "grad_clipping": 5.0,
    "grad_norm": 2.0,
    "validation_metric": "-loss",
    "optimizer": {
      "type": "adagrad",
      "lr": 0.25
    },
    "num_serialized_models_to_keep": 2
  }
}
