{
  "dataset_reader": {
    "type": "text_summarization",
    "lazy": true,
    "source_tokenizer": {
      "type": "word",
      "word_splitter": {
         "type": "jieba",
      },
    },
    "source_token_indexers": {
      "tokens": {
        "type": "single_id"
      }
    }
  },
  "train_data_path": "tests/fixtures/train.jsonl",
  "validation_data_path": "tests/fixtures/val.jsonl",
  "test_data_path": "tests/fixtures/test.jsonl",
  "evaluate_on_test": false,
  "vocabulary": {
      "min_count": {"tokens": 5},
      "max_vocab_size": 100000
  },
  "model": {
    "type": "pg",
    "source_embedder": {
      "tokens": {
        "type": "embedding",
        "embedding_dim": 300,
        "projection_dim": 100,
      }
    },
    "encoder": {
      "type": "lstm",
      "bidirectional": true,
      "input_size": 100,
      "hidden_size": 100,
      "num_layers": 1,
      "dropout": 0.2
    },
    "max_decoding_steps": 60,
    "attention_function": {
      "type": "linear-v",
      "combination": "x,y",
      "tensor_1_dim": 100,
      "tensor_2_dim": 200,
      "attend_dim": 200,
      "activation": "tanh"
    },
  },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [["source_tokens", "num_tokens"],["target_tokens","num_tokens"]],
    "biggest_batch_first": true,
    "batch_size": 32,
    "max_instances_in_memory": 320 
  },
  "trainer": {
    "num_epochs": 2,
    "patience": 1,
    "cuda_device": 0,
    "grad_clipping": 5.0,
    "optimizer": {
      "type": "adagrad"
    },
    "num_serialized_models_to_keep": 1
  }
}
